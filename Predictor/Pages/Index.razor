				<MudPaper Elevation="2" Class="pa-4" Style="height: 150px;"></MudPaper>
			</MudItem>
			<MudItem xs="12" sm="12" md="4">
				<MudPaper Elevation="2" Class="pa-4" Style="height: 150px;"></MudPaper>
			</MudItem>
		</MudGrid>
	</MudContainer>
}
@code
{
	int? test = null;

	protected override async Task OnInitializedAsync()
	{
		test = await Start();
	}

	private async Task<int> Start()
	{
		await Task.Delay(2000);
		return 1;
	}
}